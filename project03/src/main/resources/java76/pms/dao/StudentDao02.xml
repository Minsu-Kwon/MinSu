<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="java76.pms.dao.StudentDao">
  <sql id="select_inc"> <!--여러개 중복된 select문을 앞에 아이디를 지정하여 중복을 방지한다.-->
	select name, email, tel, cid, photo    	
  </sql>	
  <select id="selectList" resultType="student"
  parameterType="map">
	<include refid="select_inc"/>
     from student
     order by
     <choose>
      <when test="email == 'email'">email </when>
      <when test="tel == 'tel'">tel </when>
      <otherwise>name</otherwise>
    </choose>
    <choose>
      <when test="align == 'desc'">desc</when>
      <otherwise>asc</otherwise>
    </choose>
     limit #{startIndex}, #{length}
  </select>
  
  <insert id="insert" parameterType="student">
    insert into student(name,email,tel,cid,photo)
     values(#{name},#{email},#{tel},#{cid},#{photo})
  </insert>
  <!-- primitive type인 경우 프로퍼티 이름은 아무거나 지정해도 된다. -->
  
  <delete id="delete" parameterType="String">
    delete from student where email=#{value}
  </delete>
  
  <update id="update" parameterType="student">
    update student set 
     name=#{name},
     tel=#{tel},
     cid=#{cid},
	 photo=#{photo}  	
    where email=#{email}
  </update>
  
<select id="selectOne" resultType="student"
  parameterType="String">
    <include refid="select_inc"/>
    from student
where email=#{email}
  </select>
  
<select id="login" resultType="student" parameterType="map">
    <include refid="select_inc"/>
    from student
where email=#{email} and pwd=#{password}
  </select>
  </mapper>